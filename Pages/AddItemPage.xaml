<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionsSystemAK.Pages.AddItemPage"
             Title="Dodawanie elementu">
    <StackLayout Spacing="15" Padding="10">
        <Entry Text="{Binding Name}" Placeholder="Nazwa produktu" />
        <Entry Text="{Binding Description}" Placeholder="Opis" />
        <Entry Text="{Binding Price}"  Placeholder="Cena" />
        <Entry Text="{Binding Status}" Placeholder="Status" />
        <Entry Text="{Binding Rating}" Placeholder="Ocena: 1-10" />
        <Button Text="Wybierz Grafike" Command="{Binding AddImageCommand}" WidthRequest="150"/>
        <Button Text="Dodaj element" Command="{Binding AddItemCommand}" BackgroundColor="DarkGreen" WidthRequest="150"/>
    </StackLayout>
</ContentPage>